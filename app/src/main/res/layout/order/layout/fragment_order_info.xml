                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView26"
                    android:layout_toRightOf="@+id/textView26"
                    android:padding="12sp"
                    android:text="无"
                    android:textColor="@color/primary_text"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:padding="12sp"
                android:text="备注"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/remark_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView26"
                android:layout_toRightOf="@+id/textView26"
                android:padding="12sp"
                android:text="无"
                android:textColor="@color/primary_text"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:padding="12sp"
                android:text="订单详情"
                android:textColor="@color/primary_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="创建时间"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/time_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/textView28"
                    android:layout_toRightOf="@+id/textView28"
                    android:padding="12sp"
                    android:text="无"
                    android:textColor="@color/primary_text"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="订单号码"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/order_id_textView"
                    android:layout_width="wrap_content"
