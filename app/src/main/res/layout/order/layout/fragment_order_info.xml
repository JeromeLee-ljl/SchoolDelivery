                    android:padding="12sp"
                    android:text="物件大小"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/order_size_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/textView31"
                    android:layout_toRightOf="@+id/textView31"
                    android:padding="12sp"
                    android:text="未填写"
                    android:textColor="@color/primary_text"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12sp"
                    android:text="订单金额"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/order_cost_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/textView30"
                    android:layout_toRightOf="@+id/textView30"
                    android:padding="12sp"
                    android:text="未填写"
                    android:textColor="@color/primary_text"/>
            </RelativeLayout>

            <Button
                android:id="@+id/complaint_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单申述"/>


        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.SwipeRefreshLayout>