                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/textView24"
                    android:layout_toRightOf="@+id/textView24"
                    android:padding="12sp"
                    android:text="未填写"
                    android:textColor="@color/primary_text"
